<head>
    <%= stylesheet_link_tag 'articles-index' %>

    <style>
        .articles-link {
            color: #CCC !important;
        }
    </style>
</head>

<% content_for :title, "#{I18n.t "shared.our_solutions"} | Olguitech s.a.s." %>
<h1 class='index-title'>
    <%= I18n.t "shared.our_solutions" %>
</h1>

<div class='articles-div'>
    <% @articles.each do |article| %>
    <div class='article still move'>
        <% if article.image.attached? %>
        <img src='<%= url_for(article.image) %>' class='article-img' alt='<%= article.image.filename %>'>
        <% end %>

        <div class='article-information'>
            <h2 class='article-title'> <%= I18n.locale == :en && article.title2 != "" && article.title2 != nil ? article.title2 : article.title %> </h2>
            <p class='article-text'>
                <%= I18n.locale == :en && article.description2 != "" && article.description2 != nil ? article.description2 : article.description %> <br>
            </p>

            <%= link_to article_path(article) do %>
            <%= render 'layouts/more' %>
            <% end %>
        </div>
    </div>
    <% end %>
</div>