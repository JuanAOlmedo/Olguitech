<div class='articles-hoverable dropdown-articles-hoverable proyectos-link dropdown-clickable-div'>
    <h2 class='dropdown-clickable'><%= I18n.t 'nav.proyects' %>
        <svg xmlns="http://www.w3.org/2000/svg" class="dropdown-clickable icon icon-tabler icon-tabler-chevron-down" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" class="dropdown-clickable" />
            <polyline points=" 6 9 12 15 18 9" class="dropdown-clickable" />
        </svg>
    </h2>

    <div class="dropdown-clickable-extensible">
        <%= link_to I18n.t("shared.all"), proyectos_path, id: "extensible-link" %>
        <% Proyecto.all.order(created_at: :desc).each do |article| %>
        <%= link_to proyecto_path(article) do %>
        <div class='articles-hoverable-article article-hoverable-article2'>
            <% if article.image.attached? %>
            <img data-src='<%= url_for(article.image) %>' class='article-hoverable-img article-hoverable-img2 proyects-lazy2' alt='<%= article.image.filename %>'>
            <% end %>

            <div class='articles-hoverable-article-content article-hoverable-content2'>
                <% title =  I18n.locale == :en && article.title2 != "" && article.title2 != nil ? article.title2 : article.title %>
                <% description =  I18n.locale == :en && article.description2 != "" && article.description2 != nil ? article.description2 : article.description %>
                <h2> <%= title.length > 50 ? title[0...50] + '...' : title %> </h2>
                <p> <%= description.length > 100 ? description[0...100] + '...' : description %> </p>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>