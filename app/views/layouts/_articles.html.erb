<div class='element articles-hoverable-div navbar-link' tabindex='0'>
    <h2 class=' element navbar-link' id='articles-hoverable'>
        <%= link_to (I18n.t 'nav.solutions'), articles_path, class:'articles-link' %>
    </h2>
    <div class='articles-hoverable-content' id="articles-hoverable-content" tabindex="1">
        <% Article.all.order(created_at: :desc).each do |article| %>
        <%= link_to article_path(article) do %>
        <div class='articles-hoverable-article'>
            <% if article.image.attached? %>
            <img data-src='<%= url_for(article.image) %>' class='article-hoverable-img articles-lazy' alt='<%= article.image.filename %>'>
            <% end %>

            <div class='articles-hoverable-article-content'>
                <% title =  I18n.locale == :en && article.title2 != "" && article.title2 != nil ? article.title2 : article.title %>
                <% description =  I18n.locale == :en && article.description2 != "" && article.description2 != nil ? article.description2 : article.description %>
                <h2> <%= title.length > 50 ? title[0...50] + '...' : title %> </h2>
                <p> <%= description.length > 100 ? description[0...100] + '...' : description %> </p>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>