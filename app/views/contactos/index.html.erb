<head>
    <%= stylesheet_link_tag 'contacto' %>
    <style>
    .contacto-link {
        transform: perspective(500px) translate3d(0, 0 , 1rem);
        color: #CCC !important;
    }
    </style>
</head>

<div class='contact-div'>
    <div class='contact-sub-div'>
        <h1 class='contact-title'>Contacto</h1>

        <% if user_signed_in? %>
            <h2 class='gold-button' style='width: 60%; margin: 0;'><%= link_to 'Contactarse', '/contactos/new', class:'access' %></h2>
        <% else %>
            <h2 class='gold-button' style='width: 80%; margin: 0;'><%= link_to 'Iniciar Sesión y Contactarse', '/contactos/new', class:'access', style:'width: 50%;' %></h2>
        <% end %>

        <h3 class='contact-alternative'> O contactate a <span class='contact-mail'>example@example.com</span> </h3>
    </div>
    
    <div class='location-container'>
        <img src='/Location.png' class='img-location' alt='Localización - 21 de setiembre esq. Ellauri 2819 ap. 703'>
        <h2 id='location'> 21 de setiembre esq. Ellauri 2819 ap. 703 </h2>
    </div>
</div>
