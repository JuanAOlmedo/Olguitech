<head>
    <%= stylesheet_link_tag 'index' %>

    <style>
        .articles-link {
            color: #CCC !important;
        }
    </style>
</head>

<% content_for :title, "#{I18n.t "shared.our_solutions"} | Olguitech s.a.s." %>

<% if @categories %>
    <div class="menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-minus-vertical" stroke-width="3" stroke="black" fill="none">
            <path d="" />
        </svg>

        <% @categories.each do |category| %>
            <% if category.articles.any? %>
                <h4 class="menu-title">
                    <%= link_to category.get_short_title, category_path(category), class: "link" %>
                </h4>
            <% else %>
                <h4 style="display: none;">
                </h4>
            <% end %>
        <% end %>
        <% if @uncategorized.any? %>
            <h4 class="menu-title">
                <%= link_to t("index.uncategorized"), url_for(order_by: :uncategorized, asc_desc: :desc), class: "link" %>
            </h4>
        <% end %>
    </div>

    <div class='articles-div'>
        <h1 class='main-title'>
            <%= I18n.t "shared.our_solutions" %>
        </h1>

        <%= render 'layouts/popup' %>

        <% @categories.each_with_index do |category, index| %>
            <% if category.articles.any? %>
                <div class="category" data-title="<%= category.get_short_title %>" id="<%= category.id %>" data-index="<%= index %>">
                    <h2> <%= category.get_title %> </h2>
                        
                    <%= cards_for category.articles %>
                </div>
            <% end %>
        <% end %>
        <% if @uncategorized.any? %>
            <div class="category" data-index="<%= @categories.length %>">
                <h2> <%= t "index.uncategorized" %> </h2>

                <%= cards_for @uncategorized %>
            </div>
        <% end %>
    </div>
<% else %>
    <div class='articles-div articles-div2'>
        <h1 class='main-title'>
            <%= I18n.t "shared.our_solutions" %>
        </h1>

        <%= render 'layouts/popup' %>

        <%= cards_for @articles %>
    </div>
<% end %>

<%= javascript_pack_tag "index" %>
