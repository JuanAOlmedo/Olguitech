<!DOCTYPE html>
<html lang='<%= I18n.locale %>'>

<head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Olguitech s.a. Soluciones en ingenierÃ­a -- Uruguay">
    <meta name="theme-color" content="hsl(210, 60%, 20%)">
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="icon" href="/favicons/favicon1.png" sizes="32x32">
    <link rel="icon" href="/favicons/favicon.png" sizes="96x96">
    <link rel="icon" href="/favicons/favicon2.png" sizes="16x16">
    <link rel="apple-touch-icon" sizes="1024x1024" href="/Icon.png">

    <%= javascript_pack_tag 'application', :defer => "defer" %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="//fonts.googleapis.com/css2?family=Montserrat&family=Varela+Round&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
</head>

<body>

    <% if flash[:alert] %>
    <%= stylesheet_link_tag 'alert', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <% if flash[:notice] %>
    <%= stylesheet_link_tag 'alert', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <% if admin_signed_in? %>
    <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <nav>
        <div class="left-navbar-section">
            <%= link_to root_path, method: :get do %>
            <img src='/LogoA1.webp' alt='Logo De Olguitech' class='logo'>
            <% end %>
        </div>

        <div class="right-navbar-section">
            <%= render 'layouts/articles' %>
            <%= render 'layouts/proyects' %>

            <h2 class='element navbar-link'>
                <%= link_to (I18n.t 'nav.about_us'), nosotros_path, method: :get, id: "nosotros-link" %>
            </h2>

            <h2 class='element navbar-link'>
                <%= link_to (I18n.t 'nav.contact'), "/contacto?l=#{I18n.locale}", method: :get, id: "contacto-link" %>
            </h2>

            <% if user_signed_in? && current_user.newsletter %>
            <h2 class='element navbar-link' id="newsletter-link">
                <%= link_to 'Newsletters', newsletters_path, method: :get, id: "newsletter-link" %>
            </h2>
            <% end %>

            <%= link_to url_for( :l => 'en' ), class: "flag element" do %>
            <img src="/flag1.png">
            <% end %>

            <%= link_to url_for( :l => 'es' ), class: "flag element" do %>
            <img src="/flag2.png">
            <% end %>

            <% if user_signed_in? %>
            <h2 class='element gold-button'><%= link_to (I18n.t 'nav.profile'), edit_user_registration_path %></h2>
            <% else %>
            <h2 class='element gold-button'><%= link_to (I18n.t 'nav.sign_in'), new_user_session_path %></h2>
            <% end %>

            <% if admin_signed_in? %>
            <h2 class='element gold-button'><%= link_to 'Admin', edit_admin_registration_path %></h2>
            <% end %>
        </div>

        <%= render 'layouts/dropdown' %>
    </nav>


    <% if flash[:alert] %>
    <div class='alert'>
        <p> <%= alert %> </p>
        <i class='close-alert' cursor='pointer' tabindex='0'>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x" width="30" height="30" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
            </svg>
        </i>
    </div>
    <% end %>


    <% if flash[:notice] %>
    <div class='notice'>
        <p> <%= notice %> </p>
        <i class='close-notice' cursor='pointer' tabindex='0'>
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-x" width="30" height="30" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" />
                <line x1="18" y1="6" x2="6" y2="18" />
                <line x1="6" y1="6" x2="18" y2="18" />
            </svg>
        </i>
    </div>
    <% end %>

    <div id='dropdown' class='dropdown'>
        <%= render 'layouts/articles2' %>
        <%= render 'layouts/proyects2' %>

        <h2 class='navbar-link-title dropdown-navbar-link'>
            <%= link_to (I18n.t 'nav.about_us'), nosotros_path, method: :get, class:'dropdown-navbar-link' %>
        </h2>

        <h2 class='navbar-link-title dropdown-navbar-link'>
            <%= link_to (I18n.t 'nav.contact'), '/contacto', method: :get, class:'dropdown-navbar-link' %>
        </h2>

        <% if user_signed_in? %>
        <h2 class='navbar-link-title dropdown-navbar-link'>
            <%= link_to 'Newsletters', newsletters_path, method: :get, class:'dropdown-navbar-link' %>
        </h2>
        <% end %>

        <div class="flags-div">
            <%= link_to url_for( :l => 'en' ), class: "flag" do %>
            <img src="/flag1.png">
            <% end %>

            <%= link_to url_for( :l => 'es' ), class: "flag" do %>
            <img src="/flag2.png">
            <% end %>
        </div>

        <% if user_signed_in? %>
        <h2 id='dropdown-acceder'><%= link_to (I18n.t 'nav.profile'), edit_user_registration_path, class:'dropdown-access' %></h2>
        <% else %>
        <h2 id='dropdown-acceder'><%= link_to (I18n.t 'nav.sign_in'), new_user_session_path, class:'dropdown-access' %></h2>
        <% end %>

        <% if admin_signed_in? %>
        <h2 id='dropdown-acceder'><%= link_to 'Admin', edit_admin_registration_path, class:'dropdown-access' %></h2>
        <% end %>
    </div>

    <main>
        <%= yield %>

        <% if admin_signed_in? %>
        <div id='admin-tools'>
            <%= link_to new_article_path, class: 'right-tool', method: :get do %>
            <i class='articles-fas'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-plus" width="55" height="55" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <circle cx="12" cy="12" r="9" />
                    <line x1="9" y1="12" x2="15" y2="12" />
                    <line x1="12" y1="9" x2="12" y2="15" />
                </svg>
            </i>
            <% end %>
            <%= link_to new_proyecto_path, class: 'right-tool', method: :get do %>
            <i class='articles-fas'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-plus" width="55" height="55" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <rect x="4" y="4" width="16" height="16" rx="2" />
                    <line x1="9" y1="12" x2="15" y2="12" />
                    <line x1="12" y1="9" x2="12" y2="15" />
                </svg>
            </i>
            <% end %>

            <%= link_to new_newsletter_path, class: 'right-tool', method: :get do %>
            <i class='articles-fas'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-news" width="55" height="55" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M16 6h3a1 1 0 0 1 1 1v11a2 2 0 0 1 -4 0v-13a1 1 0 0 0 -1 -1h-10a1 1 0 0 0 -1 1v12a3 3 0 0 0 3 3h11" />
                    <line x1="8" y1="8" x2="12" y2="8" />
                    <line x1="8" y1="12" x2="12" y2="12" />
                    <line x1="8" y1="16" x2="12" y2="16" />
                </svg>
            </i>
            <% end %>

            <%= link_to users_path, class: 'right-tool', method: :get do %>
            <i class='articles-fas'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-users" width="55" height="55" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <circle cx="9" cy="7" r="4" />
                    <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                    <path d="M21 21v-2a4 4 0 0 0 -3 -3.85" />
                </svg>
            </i>
            <% end %>
        </div>
        <% end %>
    </main>

    <%= javascript_pack_tag 'all' %>

    <% if flash[:alert] %>
    <%= javascript_pack_tag 'alert' %>
    <% end %>

    <% if flash[:notice] %>
    <%= javascript_pack_tag 'notice' %>
    <% end %>
</body>

</html>