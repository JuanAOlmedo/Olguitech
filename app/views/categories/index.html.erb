<%= tag.h1 Category.model_name.human.pluralize, class: 'main-title' %>

<%= turbo_frame_tag 'category_selector', class: 'all-categories centered' do %>
    <% @categories.each do |category| %>
        <%= link_to category.localized_title, category,
                    data: { turbo_frame: '_top' }, class: 'link' %>
    <% end %>
<% end %>
