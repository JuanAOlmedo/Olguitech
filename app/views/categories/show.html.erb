<% content_for :title, "#{@category.get_title} | Olguitech s.a.s." %>

<div id='show'>
    <% if admin_signed_in? %>
        <%= link_to edit_category_path(@category), class: 'edit', method: :get do %>
            <i class='articles-fas'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="44" height="44" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <path d="M9 7 h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                    <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                    <line x1="16" y1="5" x2="19" y2="8" />
                </svg>
            </i>
        <% end %>

        <%= link_to @category, data: { turbo_method: :delete, turbo_confirm: 'Estas seguro de que queres eliminar el articulo?' }, class: 'destroy' do %>
            <i class='articles-fas fas fa-trash'>
                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="44" height="44" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" />
                    <line x1="4" y1="7" x2="20" y2="7" />
                    <line x1="10" y1="11" x2="10" y2="17" />
                    <line x1="14" y1="11" x2="14" y2="17" />
                    <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                    <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                </svg>
            </i>
        <% end %>
    <% end %>

    <div id="all-categories" class="centered">
        <p> <strong>
                <%= t "categories.all" %>
        </strong> </p>
        <% @categories.each do |category| %>
            <% unless category == @category %>
                <%= link_to category.get_title, category_path(category), class: 'link' %>
            <% else %>
                <p class="btn">
                    <%= category.title %>
                </p>
            <% end %>
        <% end %>
        </p>
    </div>

    <h2 class='main-title'> <%= @category.get_title %> </h2>
    <p class='subtitle'> <%= @category.get_desc %> </p>

    <% if @category.products.any? %>
        <h2 class="title centered">
            <%= t "nav.products" %>
        </h2>
        
        <%= alternative_cards_for @category.products %>
    <% end %>

    <% if @category.articles.any? %>
        <h2 class="title centered">
            <%= t "nav.solutions" %>
        </h2>

        <%= cards_for @category.articles %>
    <% end %>

    <% if !@category.proyectos.empty? %>
        <h2 class="title centered">
            <%= t "nav.proyects" %>
        </h2>
        
        <%= cards_for @category.proyectos %>
    <% end %>
</div>