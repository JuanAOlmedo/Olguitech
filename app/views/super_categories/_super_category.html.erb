<div class='super-category'>
    <div class="menu" data-controller="index">
        <h3> Categor√≠as </h3>

        <% super_category.categories.each do |category| %>
            <%= link_to category.localized_title, "##{category.id}", class: 'link', title: category.localized_title, data: { action: 'index#scrollToAnchor' } %>
        <% end %>
    </div>

    <div class="articles-div">
        <% super_category.categories.each do |category| %>
            <div class="category" id="<%= category.id %>">
                <%= tag.h2 category.localized_title, class: 'title centered' %>

                <% if @model_name == :products %>
                    <%= alternative_cards_for(category.send(@model_name).select(:id, :slug, :title, :title2, :description, :description2)) %>
                <% else %>
                    <%= cards_for(category.send(@model_name).select(:id, :slug, :title, :title2, :description, :description2)) %>
                <% end %>
            </div>
        <% end %>
    </div>
</div>
