<% content_for :nav, "transparent" %>

<div class="front">
    <h2 class="main-title"><%= t ".title" %></h2>
    <p class='subtitle'>
        <%= t ".subtitle1" %> 
        <strong> 
            <%= t ".subtitle2" %> 
        </strong>
        <br>
        <br>
    </p>
    
    <%= link_to t(".why"), nosotros_path, class: "btn centered" %>
</div>

<% if @articles.any? %>
    <h1 class="main-title">
        <%= t ".articles" %>
    </h1>
    <%= link_to t("general.see_all"), articles_path, class: "btn centered" %>

    <%= cards_for @articles %>
<% end %>

<% if @proyectos.any? %>
    <h1 class="main-title">
        <%= t ".proyectos" %>
    </h1>
    <%= link_to t("general.see_all"), proyectos_path, class: "btn centered" %>

    <%= cards_for @proyectos %>
<% end %>

<% if @products.any? %>
    <h1 class="main-title">
        <%= t ".products" %>
    </h1>
    <%= link_to t("general.see_all"), products_path, class: "btn centered" %>

    <%= alternative_cards_for @products %>
<% end %>

<div class="big-card contacto centered">
    <h1 class='main-title'> 
        <%= t ".interested" %>
    </h1>

    <p class="big-text">
        <%= t ".sign_up" %>
        
        <a class="link" href="mailto:olguitech@olguitech.com"> olguitech@olguitech.com </a>.
    </p>

    <%= link_to t(".contact"), contactos_path, class: "btn" %>
</div>

