<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
    <% if blob.representable? %>
        <% resize = local_assigns[:in_gallery] ? [ 800, 600 ] : [ 1024, 768 ] %>
        <%= image_tag blob.representation(resize_to_limit: resize, convert: 'webp'), style: "max-width: 100%; height: auto;", loading: 'lazy', data: { action: 'click->image-displayer#displayImage', nowebpsrc: url_for(blob.representation(resize_to_limit: resize)) } %>
    <% end %>

    <figcaption class="attachment__caption">
        <% if caption = blob.try(:caption) %>
        <%= caption %>
        <% end %>
    </figcaption>
</figure>
