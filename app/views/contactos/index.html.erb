<head>
    <%= stylesheet_link_tag 'contacto' %>
    <style>
        .contacto-link {
            color: #CCC !important;
        }
    </style>

    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
    <script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
</head>

<div class='contact-div'>
    <div id="map" class="location-container" alt='Mapa de 21 de Setiembre 2819 of. 703 esq. Ellauri'>
        <p class='location-info'> Encontranos en 21 de Setiembre 2819 of. 703 esq. Ellauri </p>
    </div>

    <div class='contact-sub-div'>
        <h1 class='contact-title'> Cómo podemos ayudarte? </h1>

        <% if user_signed_in? %>
        <%= link_to '/contacto/new', class:'access' do %>
        <h2 class='contact-button'>Contactarse</h2>
        <% end %>
        <% else %>
        <%= link_to '/contacto/new', class:'access' do %>
        <h2 class='contact-button'>Iniciar Sesión y Contactarse</h2>
        <% end %>
        <% end %>

        <h3 class='contact-alternative'> O contactate a <span class='contact-mail'>olguitech@olguitech.com</span> </h3>
    </div>
</div>

<%= javascript_pack_tag 'contacto' %>