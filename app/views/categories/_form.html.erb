<%= form_with model: @category do |form| %>
    <div class="form">
        <div class="field">
            <%= form.label :title, "Título" %>
            <%= form.text_area :title %>
        </div>

        <div class="field">
            <%= form.label :title2, "Título en inglés" %>
            <%= form.text_area :title2 %>
        </div>

        <div class="field">
            <%= form.label :description, "Descripción" %>
            <%= form.text_area :description %>
        </div>

        <div class="field">
            <%= form.label :description2, "Descripción en inglés" %>
            <%= form.text_area :description2 %>
        </div>

        <div class="file">
            <%= form.label :image do %>
                <%= form.file_field :image, class:'image-attacher' %>
                <span>
                    Elegir una imagen...
                </span>
            <% end %>
        </div>

        <% url = url_for(@category.image) rescue "https://" %>
        <%= image_tag url, class:"image-upload centered"  %>

        <div class="checkbox-field">
            <%= form.label :products, "Productos relacionados" %> <br>
            <%= form.collection_check_boxes :product_ids, Product.all, :id, :localized_title do |b| %>
                <%= b.check_box %>
                <%= b.label { b.text } %> <br>
            <% end %>
        </div>

        <div class="checkbox-field">
            <%= form.label :article, "Artículos relacionados" %> <br>
            <%= form.collection_check_boxes :article_ids, Article.all, :id, :localized_title do |b| %>
                <%= b.check_box %>
                <%= b.label { b.text } %> <br>
            <% end %>
        </div>

        <div class="checkbox-field">
            <%= form.label :proyecto, "Proyectos relacionados" %> <br>
            <%= form.collection_check_boxes :proyecto_ids, Proyecto.all, :id, :localized_title do |b| %>
                <%= b.check_box %>
                <%= b.label { b.text } %> <br>
            <% end %>
        </div>
    </div>

    <%= form.submit 'Crear', class: "btn centered", style: "margin-bottom: 2rem;"  %>
<% end %>
