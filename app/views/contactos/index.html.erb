<head>
    <%= stylesheet_link_tag 'contacto' %>

    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
    <script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
</head>

<% content_for :title, "#{I18n.t "nav.contact"} | Olguitech s.a.s." %>

<div class='contact-div'>
    <div id="map" class="location-container" alt='<%= I18n.t "contact.direction_alt" %>'>
        <p class='location-info'> <%= I18n.t "contact.direction" %> </p>
    </div>

    <div class='contact-sub-div'>
        <h1 class='contact-title'> <%= I18n.t "contact.how_can_we_help_you" %> </h1>

        <% if user_signed_in? %>
        <%= link_to "/contacto/new?l=#{I18n.locale}", class:'access' do %>
        <h2 class='contact-button'><%= I18n.t "contact.contact" %></h2>
        <% end %>
        <% else %>
        <%= link_to "/contacto/new?l=#{I18n.locale}", class:'access' do %>
        <h2 class='contact-button'><%= I18n.t "contact.sign_in_and_contact" %></h2>
        <% end %>
        <% end %>

        <h3 class='contact-alternative'>
            <%= t("contact.contact_html") %>
        </h3>
    </div>
</div>

<%= javascript_pack_tag 'contacto' %>