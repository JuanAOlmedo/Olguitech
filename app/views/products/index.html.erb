<% content_for :title, "#{I18n.t 'shared.our_products'} | Olguitech s.a.s." %>

<%= tag.h1 t('shared.our_products'), class: 'main-title' %>

<%= turbo_frame_tag 'index', target: '_top' do %>
    <%= turbo_frame_tag 'super_categories' do %>
        <%= link_to t('index.explore'),
                    super_categories_path(model_name: :products),
                    class: 'btn centered' %>
    <% end %>

    <%= tag.h1 t('index.uncategorized'), class: 'title centered' if @uncategorized %>

    <%= compact_cards_for @articles %>
<% end %>
