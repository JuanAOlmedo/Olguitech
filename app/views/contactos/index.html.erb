<head>
    <%= stylesheet_link_tag 'contacto' %>
    <style>
    .contacto-link {
        transform: perspective(500px) translate3d(0, 0 , 1rem);
        color: #CCC !important;
    }
    </style>

    <link rel="stylesheet" href="https://openlayers.org/en/v4.6.5/css/ol.css" type="text/css">
	<script src="https://openlayers.org/en/v4.6.5/build/ol.js" type="text/javascript"></script>
</head>

<div class='contact-div'>
    <div id="map" class="location-container" alt='Mapa de 21 de setiembre esq. Ellauri 2819 of. 703'>
        <p class='location-info'> Encontranos en 21 de setiembre esq. Ellauri 2819 of. 703 </p>
    </div>

    <div class='contact-sub-div'>
        <h1 class='contact-title'> Cómo podemos ayudarte? </h1>

        <% if user_signed_in? %>
            <h2 class='gold-button' style='width: 60%; margin: 0;'><%= link_to 'Contactarse', '/contactos/new', class:'access' %></h2>
        <% else %>
            <h2 class='gold-button' style='width: 80%; margin: 0;'><%= link_to 'Iniciar Sesión y Contactarse', '/contactos/new', class:'access', style:'width: 50%;' %></h2>
        <% end %>

        <h3 class='contact-alternative'> O contactate a <span class='contact-mail'>olguitech@olguitech.com</span> </h3>
    </div>
</div>

<%= javascript_pack_tag 'contacto' %>