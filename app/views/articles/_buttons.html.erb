<%= link_to "Editar", edit_article_path(article), class: 'btn' unless article.trashed? %>

<% if article.drafted? %>
    <%= link_to "Publicar", article_path(article, params: { article: { status: 0 } }), data: { turbo_method: :patch }, class: 'btn' %>
<% elsif !article.trashed? %>
    <%= link_to "Despublicar", article_path(article, params: { article: { status: 1 } }), data: { turbo_method: :patch }, class: 'btn' %>
<% end %>

<% if article.trashed? %>
    <%= link_to "Sacar de la papelera", article_path(article, params: { article: { status: 1 } }), data: { turbo_method: :patch }, class: 'btn' %>
<% else %>
    <%= link_to "Mover a la papelera", article_path(article, params: { article: { status: 2 } }), data: { turbo_method: :patch }, class: 'btn is-danger' %>
<% end %>
